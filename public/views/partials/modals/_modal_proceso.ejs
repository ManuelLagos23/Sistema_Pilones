<script>
    function updateSwitchValue(input) {
        var valueLabel = input.parentNode.querySelector('label:last-of-type');
        if (input.checked) {
            input.value = 'Sí';
            valueLabel.textContent = 'Sí';
        } else {
            input.value = 'No';
            valueLabel.textContent = 'No';
        }
    }

    // Establecer el valor predeterminado en "No"
    document.getElementById('proceso_dashboard').checked = false;
    updateSwitchValue(document.getElementById('proceso_dashboard'));
</script>
               
