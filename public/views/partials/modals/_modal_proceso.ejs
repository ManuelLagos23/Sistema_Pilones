<style>





input{
    text-align: center;
}
    /* Estilo base del switch */
    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

    /* Estilo del input oculto */
    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* Estilo del slider del switch */
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }

    /* Estilo del punto deslizante */
    .slider:before {
        position: absolute;
        content: "";
        height: 26px;
        width: 26px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        -webkit-transition: .4s;
        transition: .4s;
    }

    /* Estilo del punto deslizante cuando el switch está activado */
    input:checked + .slider {
        background-color: #875A7B;
    }

    /* Estilo del punto deslizante cuando el switch está activado */
    input:checked + .slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    /* Estilo adicional para mejorar la apariencia */
    .slider.round {
        border-radius: 34px;
    }

    .slider.round:before {
        border-radius: 50%;
    }

    /* Estilo para la alineación en línea */
    .inline-label {
        display: flex;
        align-items: center;
    }

    .inline-label label {
        margin: 0 10px;
    }
</style>

