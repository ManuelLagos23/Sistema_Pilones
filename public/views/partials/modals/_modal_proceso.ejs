                <h5 class="modal-title" style="color: #ffffff;" id="editProcesoModal"><i
                        class="bi bi-pencil-square just"></i> Actualizar Proceso</h5>
            </div>
            <div class="modal-body">
                <form id="editProcesoForm">
                    <input type="hidden" id="procesoId" name="procesoId">
  

                    <div class="row mb-3">
                        <label for="editCodigo" class="col-sm-3 col-form-label form-label0">Código del proceso:</label>
                        <div class="col-sm-9">
                            <input type="text" id="editCodigo" name="editCodigo" class="form-control" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="editTipo" class="col-sm-3 col-form-label form-label0">Proceso del tabaco:</label>
                        <div class="col-sm-9">
                            <input type="text" id="editProceso" name="editProceso" class="form-control" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="editDescripcion" class="col-sm-3 col-form-label form-label0">Descripción del proceso:</label>
                        <div class="col-sm-9">
                            <input type="text" id="editDescripcion" name="editDescripcion" class="form-control" required>
                        </div>
                    </div>



                    <div class="row mb-3">
                        <label for="nombre" class="col-sm-3 col-form-label form-label0">¿Agregar proceso al dashboard?</label>
                        <div class="col-sm-9">
                            <label >No</label>
                            <label class="switch" style="text-align: center;">
                                <input type="checkbox" id="edit_proceso_dashboard" name="edit_proceso_dashboard" onchange="updateSwitchValue(this)">
                                <span class="slider round"></span>
                            </label>
                            <label >Sí</label>
                        </div>
                    </div>







                    
                    <script>
                        $(document).ready(function() {
                            function updateSwitchValue(input) {
    var valueLabel = input.parentNode.querySelector('label:last-of-type');
    if (input.checked) {
        input.value = 'Sí';
        valueLabel.textContent = 'Sí';
    } else {
        input.value = 'No';
        valueLabel.textContent = 'No';
    }
}
document.getElementById("proceso_dashboard").addEventListener("change", function() {
    updateSwitchValue(this);
});

                
                
                            // Función para ajustar el estado del interruptor
                            function setSwitchValue(value) {
                                if (value === 'Sí' || value==="si" ) {
                                    $("#edit_proceso_dashboard").prop('checked', true);
                                } else {
                                    $("#edit_proceso_dashboard").prop('checked', false);
                                }
                                updateSwitchValue(document.getElementById('edit_proceso_dashboard'));
                            }
                
                            // UPDATE MODAL
                            $("#procesoList").on("click", ".edit-btn", function () {
                                const procesoId = $(this).data("id");
                
                                $.get(`/api/proceso/${procesoId}`, function (proceso) {
                                    $("#editCodigo").val(proceso.codigo);
                                    $("#editProceso").val(proceso.proceso_tabaco);
                                    $("#editDescripcion").val(proceso.descripcion);
                                   
                
                                    // Establecer el valor del interruptor y actualizar su estilo
                                    setSwitchValue(proceso.agregar_proceso);
                
                                    $("#editProcesoModal").modal("show");
                                    $("#updateProcesoButton").data("id", procesoId);
                                });
                            });
                
                            // Llama a updateSwitchValue cuando el switch cambie de estado
                            $("#edit_proceso_dashboard").on('change', function() {
                                updateSwitchValue(this);
                            });
                        });
                    </script>
                    
                    
                
                <hr>
                   

                    <button id="updateProcesoButton" class="btn btn-primary"
                    style="background: #00a09d" type="submit">Guardar cambios</button>
                </form>
            </div>
        </div>
    </div>
