<!-- CREATE MODAL -->
<div class="modal fade" id="createEtapaModal" tabindex="-1" aria-labelledby="createWorkerModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 45%;">
        <div class="modal-content">
            <div class="modal-header" style="background: #875a7b; border-radius: 5px;">
                <h5 class="modal-title" style="color: #ffffff;" id="createEtapaModal"><i
                        class="bi bi-box-arrow-down"></i> <p id="titleworker"  style="display: inline;"> Agregar nueva etapa</p></h5>
            </div>
            <div class="modal-body">
                <form id="createEtapaForm">
                    <div class="row mb-3">


                        <label id="modalworkername" for="nombre" class="col-sm-3 col-form-label form-label0">Código de la etapa:</label>
                        <div class="col-sm-9">
                            <input  type="text" id="codigo_etapa" name="nombre_etapa" class="form-control"
                                placeholder="Ejemplo: Etapa" required><br>
                        </div>

                        <label id="modalworkername" for="nombre" class="col-sm-3 col-form-label form-label0">Etapa del tabaco:</label>
                        <div class="col-sm-9">
                            <input type="number" id="nombre_etapa" name="nombre_etapa" class="form-control"
                                placeholder="Ejemplo: Ingrese valores númericos" required><br>
                        </div>

                        
                         
                    <label id="modalworkername" for="nombre" class="col-sm-3 col-form-label form-label0">Descripción de la etapa:</label>
                    <div class="col-sm-9">
                        <input type="text" id="descripcion_etapa" name="nombre_etapa" class="form-control"
                            placeholder="Ejemplo: Describa el tipo de etapa" required><br>
                    </div>
                    </div>


                    <hr>

                    <button id="createVariedadButton" class="btn btn-success" style="background: #00a09d"
                        type="submit">Guardar nueva etapa</button>
                </form>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="successEtapaModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"    style="background: #875a7b; border-radius: 5px;" >
                <h5 class="modal-title" id="successModalLabel">Éxito</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>La etapa se creó correctamente.</p>
            </div>
        </div>
    </div>
</div>












<!-- UPDATE MODAL -->
<div class="modal fade" id="editEtapaModal" tabindex="-1" aria-labelledby="editEtapaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 45%;">
        <div class="modal-content">
            <div class="modal-header" style="background: #875a7b; border-radius: 5px;">
                <h5 class="modal-title" style="color: #ffffff;" id="editWorkerModal"><i
                        class="bi bi-pencil-square just"></i> Actualizar Etapa</h5>
            </div>
            <div class="modal-body">
                <form id="editEtapaForm">
                    <input type="hidden" id="etapaId" name="etapaId">

                    <div class="row mb-3">
                        <label for="editCodigo" class="col-sm-3 col-form-label form-label0">Código de la etapa:</label>
                        <div class="col-sm-9">
                            <input type="text" id="editCodigo" name="editCodigo" class="form-control" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="editEtapa" class="col-sm-3 col-form-label form-label0">Etapa del tabaco:</label>
                        <div class="col-sm-9">
                            <input type="number" id="editEtapa" name="editEtapa" class="form-control" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="editDescripcion" class="col-sm-3 col-form-label form-label0">Descripción de la etapa:</label>
                        <div class="col-sm-9">
                            <input type="text" id="editDescripcion" name="editDescripcion" class="form-control" required>
                        </div>
                    </div>
                    <hr>
                    <button id="updateEtapaButton" class="btn btn-primary"
                    style="background: #00a09d" type="submit">Guardar cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>








<!-- SUCCESS MODAL UPDATE -->
<div class="modal fade" id="successEtapaModalUpdate" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"    style="background: #875a7b; border-radius: 5px;" >
                <h5 class="modal-title" id="successModalLabel">Éxito</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>La etapa se actualizó exitosamente.</p>
            </div>
        </div>
    </div>
</div>



<!-- DELETE MODAL -->
