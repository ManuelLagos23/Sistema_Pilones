<!-- CREATE MODAL -->
<div class="modal fade" id="createWorkerModal" tabindex="-1" aria-labelledby="createWorkerModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 45%;">
        <div class="modal-content">
            <div  style="background: #875a7b; border-radius: 5px; " class="modal-header" style="background: linear-gradient(to right, #82694e, #e2ba87, #fcdfb8);">
                <h5 class="modal-title" style="color: #ffffff;" id="createWorkerModal"><i
                        class="bi bi-box-arrow-down"></i> <p id="titleworker"  style="display: inline;"> Agregar nuevo empleado</p></h5>
            </div>
            <div class="modal-body">
                <form id="createWorkerForm">
                    <div class="row mb-3">
                        <label id="modalworkername" for="nombre" class="col-sm-3 col-form-label form-label0">Nombre del empleado:</label>
                        <div class="col-sm-9">
                            <input type="text" id="nombre" name="nombre" class="form-control" style="text-align: center;"
                                placeholder="Ejemplo: Manuel Lagos" required><br>
                        </div>
                    </div>
                

                    
                     <hr>

                    <button id="createWorkerButton" class="btn btn-success" style="background: #00a09d"
                        type="submit">Guardar nuevo empleado</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- UPDATE MODAL -->
<div class="modal fade" id="editWorkerModal" tabindex="-1" aria-labelledby="editWorkerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 45%;">
        <div class="modal-content">
            <div class="modal-header" style="background: #875a7b; border-radius: 5px;">
                <h5 class="modal-title" style="color: #ffffff;" id="editWorkerModal"><i
                        class="bi bi-pencil-square just"></i> Actualizar empleado</h5>
            </div>
            <div class="modal-body">
                <form id="editArduinoForm">
                    <input type="hidden" id="workerId" name="workerId">

                    <div class="row mb-3">
                        <label for="editNombre" class="col-sm-3 col-form-label form-label0">Nombre del empleado:</label>
                        <div class="col-sm-9">
                            <input  style="text-align: center;" type="text" id="editNombre" name="editNombre" class="form-control" required>
                        </div>
                    </div> <hr>

                    <button id="updateWorkerButton" class="btn btn-primary"
                    style="background: #00a09d" type="submit">Guardar cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="deleteWorkerModal" tabindex="-1" aria-labelledby="deleteWorkerModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(to right, #890d0d, #890d0dc0, #c90000c0);"">
                <h5 class=" modal-title" style="color: #ffffff;" id="deleteWorkerModal"><i class="bi bi-trash3"></i>
                Delete</h5>
            </div>
            <div class="modal-body">
                <a><strong>¿Está seguro que quiere borrar el empleado?</strong>

                <br><button id="deleteWorkerButton" class="btn btn-primary"
                    style="background-color: #c90000c0;  border: 0px;" type="button"
                    onclick="deleteWorker()">Continue</button>
            </div>
        </div>
    </div>
</div>

